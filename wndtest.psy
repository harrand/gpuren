== default ==
{
	add_build_file("./wnd.psy");
	add_build_file("../psyc/src/stdlib/stdlib.psy");
	executable("wndtest");
};

main : func(args : program_args? -> s32)
{
	wl_open_socket(args->envp);
	wnd ::= gpu_create_wnd(gpu_wnd_info
	{
		.flags := zero;
		.width := 800;
		.height := 600;
		.title := "wndtest";
	});
	while(true)
	{
		gpu_wnd_update(wnd);
	}
	return 0;
};
